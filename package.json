{
  "name": "payload-vercel-functions",
  "description": "Payload deployed as Vercel functions",
  "version": "1.0.0",
  "main": "dist/server.js",
  "license": "MIT",
  "scripts": {
    "dev": "next dev",
    "start": "next start",
    "lint": "next lint",
    "build:next": "next build",
    "build:payload": "cross-env PAYLOAD_CONFIG_PATH=payload/payload.config.ts payload build",
    "build:server": "tsc",
    "copy:build": "node build.js ./pages/api",
    "build": "yarn copyfiles && yarn build:payload && yarn build:server && yarn copy:build",
    "copyfiles": "copyfiles -u 1 \"payload/**/*.{html,css,scss,ttf,woff,woff2,eot,svg,jpg,png}\" dist/",
    "generate:types": "cross-env PAYLOAD_CONFIG_PATH=payload/payload.config.ts payload generate:types",
    "generate:graphQLSchema": "PAYLOAD_CONFIG_PATH=payload/payload.config.ts payload generate:graphQLSchema"
  },
  "dependencies": {
    "@apollo/client": "^3.7.3",
    "@aws-sdk/client-s3": "^3.245.0",
    "@faceless-ui/css-grid": "^1.2.0",
    "@faceless-ui/modal": "^2.0.1",
    "@payloadcms/plugin-cloud-storage": "^1.0.12",
    "@payloadcms/plugin-seo": "^1.0.10",
    "@vercel/edge": "^0.1.2",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "graphql": "^16.6.0",
    "next": "^13.1.1",
    "payload": "^1.5.3",
    "payload-admin-bar": "^1.0.5",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "sass": "^1.57.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.9",
    "@types/node": "^18.11.18",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "eslint": "8.31.0",
    "eslint-config-next": "13.1.1",
    "nodemon": "^2.0.6",
    "ts-node": "^9.1.1",
    "typescript": "^4.8.4"
  }
}
